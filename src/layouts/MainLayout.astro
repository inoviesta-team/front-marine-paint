---
import GlobalModal from "@features/modal/components/GlobalModal";
import MarineFooter from "@components/layout/MarineFooter";
import MarineHeader from "@components/layout/MarineHeader";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import "../styles/wp-article.css";
import { linkSocial } from "@utils/social";
import { feUrl } from "@utils/url";
import LoadingOverlay from "@components/ui/LoadingOverlay";
import { only } from "node:test";

// SEO Props
interface Props {
  title?: string;
  description?: string;
  image?: string;
  isShowWhatsapp?: boolean;
}

const {
  title = "ShopAstro - Your Modern Ecommerce Store",
  description = "Find the best products at the best prices at ShopAstro.",
  image = "/images/og-image.jpg",
  isShowWhatsapp = true,
} = Astro.props;

// Generate canonical URL
let canonicalURL;
try {
  canonicalURL = new URL(
    Astro.url.pathname,
    Astro.site || feUrl
  );
} catch (error) {
  // Fallback to just using the pathname
  canonicalURL = new URL(feUrl + Astro.url.pathname);
}

// Process image URLs
let ogImageUrl = image;
let twitterImageUrl = image;
try {
  if (image.startsWith("/")) {
    ogImageUrl = new URL(image, canonicalURL).toString();
    twitterImageUrl = ogImageUrl;
  }
} catch (error) {
  // Fallback to just using the image path directly
  console.error("Error processing image URL:", error);
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />

    <!-- SEO -->
    <title transition:animate="fade">{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL.toString()} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.toString()} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL.toString()} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={twitterImageUrl} />

    <!-- Favicon -->
    <link rel="icon" href="/images/logo-with-bg/bg-white.png" type="image/svg+xml" />

    <!-- Navigation Scripting -->
    <script>
      // This script adds event listeners for the Astro view transitions lifecycle events
      document.addEventListener("astro:page-load", () => {
        console.log("Page loaded completely");
      });

      document.addEventListener("astro:after-swap", () => {
        console.log("New page content swapped in");

        // You could do any DOM updates here that should happen right after
        // the new page content is loaded
      });

      // This allows us to scroll to the top when navigating to a new page
      document.addEventListener("astro:before-swap", () => {
        window.scrollTo(0, 0);
      });
    </script>
  </head>
  <body class="min-h-screen bg-gray-50">
    <MarineHeader client:only="react" transition:persist />

    <main class="relative flex-grow" transition:animate="fade">
      <slot />
    </main>

    <LoadingOverlay client:only="react" />
    <GlobalModal client:only="react" />

    {
      isShowWhatsapp && (
        <a
          href={linkSocial.whatsapp}
          target="_blank"
          rel="noopener noreferrer"
          class="z-[1] fixed bottom-6 right-6 flex items-center gap-2 rounded-full sm:rounded-lg bg-green-600 p-4 sm:px-4 sm:py-2 text-white hover:text-white shadow-lg hover:bg-green-700 transition-colors duration-200"
        >
          <span class="hidden sm:inline font-sans">Hubungi kami</span>
          <svg
            class="w-7 h-7 sm:w-5 sm:h-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
