import { marineApi } from "@api/marineApi";
import MarineArticleCard from "@components/article/MarineArticleCard";
import MarineContactForm from "@components/contact/MarineContactForm";
import MarineProductCard from "@components/product/MarineProductCard";
import MarineProjectCard from "@components/project/MarineProjectCard";
import MarineTestimonialCard from "@components/testimonial/MarineTestimonialCard";
import MarineButton from "@components/ui/MarineButton";
import MarineValueCard from "@components/value/MarineValueCard";
import { productApiStatic } from "@features/products/api/productApiStatic";
import { articleApiStatic } from "@features/article/api/articleApiStatic";
import MainLayout from "@layouts/MainLayout.astro";
import { ArrowRight } from "lucide-react";
import { linkSocial } from "@utils/social";
import { brandApiStatic } from "@features/products/api/brandApiStatic";

// Fetch data for the page
let products = [];
let projects = [];
let brands = [];
let articles = [];
let testimonials = [];
let partners = [];

try {
  // Fetch products
  const responseProducts = await productApiStatic.getProducts({
    limit: 10,
  });
  // console.log("responseProducts: ", responseProducts?.data?.products || []);
  products = (await responseProducts?.data?.products) || [];

  // Fetch projects
  projects = await marineApi.getProjects({ limit: 4 });

  // Fetch brands
  const responseBrands = await brandApiStatic.getAllBrands({
    limit: 100,
  });
  brands = (await responseBrands?.data?.brands) || [];
  console.log("brands: ", brands);

  // Fetch articles
  const responseArticles = await articleApiStatic.getArtciles();
  // console.log("responseArticles: ", responseArticles || []);
  articles = await responseArticles;

  // Fetch testimonials
  testimonials = await marineApi.getTestimonials();

  // Fetch partners
  partners = await marineApi.getPartners();
} catch (error) {
  console.error("Failed to fetch data:", error);
}
