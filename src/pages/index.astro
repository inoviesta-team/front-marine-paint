---
import MarineLayout from "@layouts/MarineLayout.astro";
import MarineHeader from "@components/layout/MarineHeader";
import MarineFooter from "@components/layout/MarineFooter";
import MarineButton from "@components/ui/MarineButton";
import MarineProductCard from "@components/product/MarineProductCard";
import MarineProjectCard from "@components/project/MarineProjectCard";
import MarineArticleCard from "@components/article/MarineArticleCard";
import MarineValueCard from "@components/value/MarineValueCard";
import MarineTestimonialCard from "@components/testimonial/MarineTestimonialCard";
import MarineContactForm from "@components/contact/MarineContactForm";
import FloatingWhatsAppButton from "@components/ui/FloatingWhatsAppButton";
import { marineApi } from "@api/marineApi";

// Fetch data for the page
let products = [];
let projects = [];
let articles = [];
let testimonials = [];
let partners = [];

try {
  // Fetch products
  products = await marineApi.getProducts({ limit: 5 });
  
  // Fetch projects
  projects = await marineApi.getProjects({ limit: 4 });
  
  // Fetch articles
  articles = await marineApi.getArticles({ limit: 3 });
  
  // Fetch testimonials
  testimonials = await marineApi.getTestimonials();
  
  // Fetch partners
  partners = await marineApi.getPartners();
} catch (error) {
  console.error('Failed to fetch data:', error);
}
---

<MarineLayout
  title="Toko Koko Lie - Marine Paint Solutions"
  description="Toko Koko Lie menyediakan cat marine terpercaya untuk ketahanan maksimal. Official partner of Ashdaq Paint."
>
  <MarineHeader client:load />
  
  <!-- Hero Section with improved contrast and visual appeal -->
  <section class="relative pt-16 pb-24 overflow-hidden">
    <!-- Dark overlay for better text contrast -->
    <div class="absolute inset-0 bg-gradient-to-r from-marine-darkBlue to-marine-blue opacity-90 z-0"></div>
    <!-- Enhanced wave pattern background -->
    <div class="absolute inset-0 bg-[url('/images/ocean-pattern.svg')] opacity-15 z-0 mix-blend-overlay"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-8">
          <!-- Improved brand highlight with accent color -->
          <div class="inline-block bg-marine-lightBlue/20 px-4 py-1 rounded-full">
            <h3 class="font-sans font-bold text-white text-lg">TOKO KOKO LIE</h3>
          </div>
          
          <div class="space-y-6">
            <!-- Enhanced heading with better typography -->
            <h1 class="font-sans font-extrabold text-white text-4xl md:text-5xl lg:text-6xl drop-shadow-md leading-tight">
              Solusi Terbaik untuk <span class="text-marine-lightBlue">Kebutuhan Cat Kapal</span> Anda
            </h1>
            
            <!-- Improved subheading with better readability -->
            <p class="font-sans text-gray-100 text-xl max-w-xl">
              Kami menyediakan berbagai jenis cat marine berkualitas tinggi untuk semua jenis kapal dan aplikasi maritim.
            </p>
          </div>
          
          <!-- Enhanced button section with improved visibility -->
          <div class="flex flex-wrap gap-4 pt-4">
            <MarineButton
              as="a" 
              href="/products" 
              variant="primary"
              size="lg"
              className="shadow-lg hover:shadow-xl transition-all duration-300"
            >
              Belanja Sekarang
            </MarineButton>
            
            <!-- Fixed contrast issue with the "Hubungi kami" button -->
            <MarineButton
              as="a" 
              href="/contact-us" 
              variant="secondary"
              size="lg"
              className="bg-white hover:bg-gray-100 flex items-center gap-2 shadow-lg hover:shadow-xl transition-all duration-300"
            >
              <span>Hubungi kami</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z" fill="currentColor"/>
              </svg>
            </MarineButton>
          </div>
        </div>
        
        <!-- Enhanced hero image section with shadow and rounded corners -->
        <div class="relative mt-10 lg:mt-0">
          <div class="relative rounded-lg overflow-hidden shadow-2xl border-4 border-white/20">
            <img 
              src="https://media.istockphoto.com/id/480919874/photo/merchant-container-ship.jpg?s=612x612&w=0&k=20&c=vkg5P34LBqiMhXZmVZZd8AEK34CzPH_qA1lre3z8z6Q=" 
              alt="Hero Image" 
              class="w-full h-full object-cover" 
            />
            <!-- Overlay gloss effect -->
            <div class="absolute inset-0 bg-gradient-to-tr from-marine-lightBlue/10 to-transparent"></div>
          </div>
          <!-- Decorative element -->
          <div class="absolute -bottom-6 -right-6 w-24 h-24 rounded-full bg-marine-lightBlue/20 z-0"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Products Section with enhanced visual design -->
  <section class="py-24 bg-white relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute -top-40 -right-40 w-96 h-96 rounded-full bg-gradient-to-br from-marine-lightBlue/10 to-marine-blue/5"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 rounded-full bg-gradient-to-tr from-marine-blue/10 to-marine-lightBlue/5"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <!-- Enhanced section header with subheading -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="inline-block px-3 py-1 bg-marine-blue/10 rounded-full text-marine-darkBlue text-sm font-sans font-medium mb-3">
          PRODUK UNGGULAN
        </div>
        <h2 class="font-sans font-bold text-marine-darkBlue text-4xl mb-4">Cat Marine Terbaik untuk Kapal Anda</h2>
        <p class="font-sans text-gray-600 text-lg">Pilihan produk cat marine berkualitas tinggi dengan daya tahan maksimal terhadap air laut dan cuaca ekstrem</p>
      </div>
      
      <!-- Enhanced product grid with hover effects -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
        {products.map((product) => (
          <MarineProductCard product={product} />
        ))}
      </div>
      
      <!-- Enhanced CTA button -->
      <div class="flex justify-center mt-12">
        <MarineButton 
          as="a" 
          href="/products" 
          variant="tertiary"
          size="lg"
          className="font-sans shadow-md hover:shadow-lg transition-all duration-300"
        >
          Lihat Semua Produk
        </MarineButton>
      </div>
    </div>
  </section>

  <!-- Value Proposition Section -->
  <section class="py-24 relative overflow-hidden">
    <!-- Enhanced background with better visual appeal -->
    <div class="absolute inset-0 bg-gradient-to-br from-marine-blue/5 to-marine-lightBlue/10 z-0"></div>
    <div class="absolute inset-0 bg-[url('/images/wave-pattern.svg')] opacity-10 z-0 mix-blend-multiply"></div>
    
    <!-- Decorative elements -->
    <div class="absolute top-20 left-10 w-32 h-32 rounded-full bg-marine-lightBlue/10 z-0 animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-40 h-40 rounded-full bg-marine-blue/10 z-0"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Enhanced section header -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="font-sans font-bold text-marine-darkBlue text-4xl mb-4">Mengapa Memilih Kami?</h2>
        <p class="font-sans text-gray-600 text-lg">Kami menawarkan solusi cat marine terbaik dengan standar kualitas tinggi dan layanan pelanggan yang unggul</p>
      </div>
      
      <!-- Enhanced grid layout with improved visual design -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <MarineValueCard title="Produk Berkualitas" iconNumber={1} description="Cat marine terbaik dengan daya tahan maksimal terhadap air laut dan cuaca" />
        <MarineValueCard title="Pengiriman Cepat" iconNumber={2} description="Layanan pengiriman cepat ke seluruh wilayah Indonesia" />
        <MarineValueCard title="Konsultasi Gratis" iconNumber={3} description="Tim ahli kami siap membantu Anda memilih produk yang tepat" />
        <MarineValueCard title="Dukungan Teknis" iconNumber={4} description="Bantuan teknis untuk aplikasi dan perawatan cat marine" />
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="py-16 bg-white relative overflow-hidden">
    <div class="absolute -top-20 -left-20 w-40 h-40 rounded-full bg-marine-accent opacity-5"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <h2 class="font-mono font-bold text-marine-blue text-3xl text-center mb-12">Projects</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {projects.map((project) => (
          <MarineProjectCard project={project} />
        ))}
      </div>
      
      <div class="flex justify-center mt-8">
        <MarineButton as="a" href="/projects" variant="secondary">
          Lihat Semua
        </MarineButton>
      </div>
    </div>
  </section>

  <!-- Enhanced Testimonials Section with visual appeal -->
  <section class="py-24 relative overflow-hidden">
    <!-- Background elements for visual enhancement -->
    <div class="absolute inset-0 bg-gradient-to-br from-marine-darkBlue/5 to-marine-blue/10 z-0"></div>
    <div class="absolute inset-0 bg-[url('/images/wave-pattern.svg')] opacity-5 z-0 mix-blend-overlay"></div>
    
    <!-- Decorative elements -->
    <div class="absolute bottom-0 left-0 w-full h-1/2 bg-gradient-to-t from-white to-transparent z-0"></div>
    <div class="absolute top-20 right-10 w-40 h-40 rounded-full bg-marine-lightBlue/10 z-0"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Enhanced section header -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="inline-block px-3 py-1 bg-marine-blue/10 rounded-full text-marine-darkBlue text-sm font-sans font-medium mb-3">
          TESTIMONI PELANGGAN
        </div>
        <h2 class="font-sans font-bold text-marine-darkBlue text-4xl mb-4">Apa Kata Mereka Tentang Kami</h2>
        <p class="font-sans text-gray-600 text-lg">Kami bangga dengan kepercayaan pelanggan terhadap produk dan layanan kami</p>
      </div>
      
      <!-- Enhanced testimonial cards with better layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <MarineTestimonialCard testimonial={testimonial} />
        ))}
      </div>
      
      <!-- Trust badges section -->
      <div class="mt-16 pt-8 border-t border-gray-200">
        <div class="text-center mb-8">
          <h3 class="font-sans font-medium text-marine-darkBlue text-xl">Dipercaya Oleh:</h3>
        </div>
        <div class="flex flex-wrap justify-center gap-8 items-center">
          <div class="w-32 h-16 bg-white rounded-lg shadow-sm flex items-center justify-center p-2">
            <img src="/images/partners/partner_1.svg" alt="Partner 1" class="max-h-full max-w-full" />
          </div>
          <div class="w-32 h-16 bg-white rounded-lg shadow-sm flex items-center justify-center p-2">
            <img src="/images/partners/partner_2.svg" alt="Partner 2" class="max-h-full max-w-full" />
          </div>
          <div class="w-32 h-16 bg-white rounded-lg shadow-sm flex items-center justify-center p-2">
            <img src="/images/partners/partner_3.svg" alt="Partner 3" class="max-h-full max-w-full" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Partners Section - Simplified and removed since already shown in testimonials -->
  
  <!-- Related Articles Section with enhanced styling -->
  <section class="py-24 relative overflow-hidden">
    <!-- Enhanced background elements -->
    <div class="absolute inset-0 bg-gray-50 z-0"></div>
    <div class="absolute inset-0 bg-[url('/images/ship-pattern.svg')] opacity-5 z-0 mix-blend-multiply"></div>
    <div class="absolute bottom-0 left-0 w-full h-24 bg-gradient-to-t from-white to-transparent z-0"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Enhanced section header -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="inline-block px-3 py-1 bg-marine-blue/10 rounded-full text-marine-darkBlue text-sm font-sans font-medium mb-3">
          ARTIKEL TERBARU
        </div>
        <h2 class="font-sans font-bold text-marine-darkBlue text-4xl mb-4">Tips & Informasi Seputar Cat Marine</h2>
        <p class="font-sans text-gray-600 text-lg">Dapatkan informasi terbaru dan tips berguna untuk memilih dan merawat cat kapal Anda</p>
      </div>
      
      <!-- Enhanced article cards with better layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {articles.map((article) => (
          <MarineArticleCard article={article} />
        ))}
      </div>
      
      <!-- Enhanced CTA button -->
      <div class="flex justify-center mt-12">
        <MarineButton 
          as="a" 
          href="/articles" 
          variant="tertiary"
          size="lg"
          className="font-sans shadow-md hover:shadow-lg transition-all duration-300"
        >
          Lihat Semua Artikel
        </MarineButton>
      </div>
    </div>
  </section>

  <!-- Enhanced Contact Section with improved visuals -->
  <section class="py-24 bg-white relative overflow-hidden">
    <!-- Background elements for visual appeal -->
    <div class="absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-gray-50 to-transparent"></div>
    <div class="absolute -bottom-40 -right-40 w-96 h-96 rounded-full bg-marine-blue/5"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <!-- Enhanced section header -->
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="inline-block px-3 py-1 bg-marine-blue/10 rounded-full text-marine-darkBlue text-sm font-sans font-medium mb-3">
          KONTAK KAMI
        </div>
        <h2 class="font-sans font-bold text-marine-darkBlue text-4xl mb-4">Butuh Informasi Lebih Lanjut?</h2>
        <p class="font-sans text-gray-600 text-lg">Kami siap membantu Anda dengan segala pertanyaan tentang produk dan layanan kami</p>
      </div>
      
      <!-- Enhanced contact form section with card styling -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div class="bg-white shadow-xl rounded-xl p-8 border border-gray-100">
          <!-- Contact text with better formatting -->
          <h3 class="font-sans font-bold text-marine-darkBlue text-2xl mb-4">Kirim Pesan Kepada Kami</h3>
          <p class="font-sans text-gray-700 mb-8">
            Tim kami akan merespon pertanyaan Anda secepat mungkin. Kami berkomitmen untuk memberikan solusi terbaik untuk kebutuhan cat kapal Anda.
          </p>
          
          <!-- Enhanced contact form with better styling -->
          <MarineContactForm client:load />
          
          <!-- Quick contact methods -->
          <div class="mt-8 pt-6 border-t border-gray-100">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-marine-blue/10 flex items-center justify-center mr-3">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z" fill="#15486b"/>
                  </svg>
                </div>
                <span class="font-sans text-sm text-gray-600">admin@gmail.com</span>
              </div>
              
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-marine-blue/10 flex items-center justify-center mr-3">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6.62 10.79C8.06 13.62 10.38 15.94 13.21 17.38L15.41 15.18C15.69 14.9 16.08 14.82 16.43 14.93C17.55 15.3 18.75 15.5 20 15.5C20.55 15.5 21 15.95 21 16.5V20C21 20.55 20.55 21 20 21C10.61 21 3 13.39 3 4C3 3.45 3.45 3 4 3H7.5C8.05 3 8.5 3.45 8.5 4C8.5 5.25 8.7 6.45 9.07 7.57C9.18 7.92 9.1 8.31 8.82 8.59L6.62 10.79Z" fill="#15486b"/>
                  </svg>
                </div>
                <span class="font-sans text-sm text-gray-600">+628123456789</span>
              </div>
              
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-marine-blue/10 flex items-center justify-center mr-3">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2C8.13 2 5 5.13 5 9C5 14.25 12 22 12 22C12 22 19 14.25 19 9C19 5.13 15.87 2 12 2ZM12 11.5C10.62 11.5 9.5 10.38 9.5 9C9.5 7.62 10.62 6.5 12 6.5C13.38 6.5 14.5 7.62 14.5 9C14.5 10.38 13.38 11.5 12 11.5Z" fill="#15486b"/>
                  </svg>
                </div>
                <span class="font-sans text-sm text-gray-600">Jakarta, Indonesia</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Map section with enhanced styling -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-marine-blue/30 to-marine-lightBlue/30 rounded-xl z-10 opacity-20"></div>
          <div class="rounded-xl shadow-xl overflow-hidden h-full flex items-center justify-center border-4 border-white">
            <img src="/images/map.svg" alt="Map" class="w-full h-full object-cover" />
          </div>
          
          <!-- Address overlay -->
          <div class="absolute bottom-8 left-8 right-8 bg-white/90 backdrop-blur-sm p-4 rounded-lg shadow-lg z-20">
            <h4 class="font-sans font-bold text-marine-darkBlue text-lg mb-1">Toko Koko Lie</h4>
            <p class="font-sans text-gray-700 text-sm">Jl. Lorem Ipsum No. 123, Jakarta, Indonesia</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Floating WhatsApp Button -->
  <FloatingWhatsAppButton client:load />

  <!-- Footer -->
  <MarineFooter client:visible />
</MarineLayout>
